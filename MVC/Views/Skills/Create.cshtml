<form asp-controller="Skills" asp-action="CreateSkill" method="POST">
    <div class="form-horizontal"    
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" />
        </div>
